<div class="container px-5 py-5">
 <div class="row mb-3">
   <div class="col-md-1"></div>
   <div class="col-md-10"><h3>商品一覧</h3></div>
   <%= link_to "新規登録", new_admin_item_path %>


   <div class="col-md-1"></div>
  </div>
 </div>
 <div class="container">
   <div class="row">
     <div class="col-md-11 mx-auto">
      <table class="table table-hover">
       <thead class="thead-light">
        <tr>
         <th>商品id</th>
         <th>商品名</th>
         <th>税抜価格</th>
        </tr>
       </thead>
       <tbody>
        <% @items.each do |item| %>
        <tr>
         <td><%= item.id %></td>
         <td><%= link_to item.name, admin_item_path(item.id) %></td>
         <td><%= item.price %></td>
        </tr>
        <% end %>
        </tbody>
  </div>
 </div>
</div>

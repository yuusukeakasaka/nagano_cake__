<div class="container">
  <div class="row">
    <div class="col-md-8 my-5">
     <h1><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10">
      <table class="table table-borderless">
        <tbody>

        <tr>
        <td width="20%">会員ID</td>
        <td width="30%"><%= @customer.id %></td>
        <td width="50%"></td>
        </tr>

        <tr>
        <td>氏名</td>
        <td><%= @customer.last_name %><%= @customer.first_name %></td>
        <td></td>
        </tr>

        <tr>
        <td>フリガナ</td>
        <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        <td></td>
        </tr>

        <tr>
        <td>郵便番号</td>
        <td><%= @customer.postal_code %></td>
        <td></td>
        </tr>

        <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
        <td></td>
        </tr>

        <tr>
        <td>電話番号</td>
        <td><%= @customer.telephone_number %></td>
        <td></td>
        </tr>

        <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
        <td></td>
        </tr>

        <tr>
        <td>会員ステータス</td>
        <td><% if @customer.is_active == true %>
            <p class="text-success">有効</p>
            <% elsif @customer.is_active == false %>
            <p class="text-secondary">退会</p>
            <% end %>
        </td>
        <td></td>
        </tr>

        <tr>
        <td></td>
        <td><%= link_to '編集する', edit_admin_customer_path, class: 'btn btn-success' %></td>
        <td></td>
        </tr>

        </tbody>
      </table>
    </div>
  </div>
</div>


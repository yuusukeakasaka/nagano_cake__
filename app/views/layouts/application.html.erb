<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
           <% if admin_signed_in? %>
           <h3><%= link_to 'LOGO', admin_root_path, class: 'nav-link text-dark' %></h3>
           <% else %>
           <h3><%= link_to 'LOGO', root_path, class: 'nav-link text-dark' %></h3>
           <% end %>

           <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
           <span class="navbar-toggler-icon"></span>
           </button>
           <div class="collapse navbar-collapse" id="navbarNavDropdown">
           <ul class="navbar-nav ml-auto">

    <% if customer_signed_in? %>
    <li class="nav-item">
      <%= link_to "マイページ", customers_my_page_path, class: 'nav-link text-dark' %>
    </li>
    <li class="nav-item">
      <%= link_to "商品一覧", items_path, class: 'nav-link text-dark' %>
    </li>
　　<li class="nav-item">
　　  <%= link_to "カート", cart_items_path, class: 'nav-link text-dark' %>
　　</li>
　　<li class="nav-item">
　　  <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'nav-link text-dark' %>
　　</li>
    <% elsif admin_signed_in? %>
    <li class="nav-item">
      <%= link_to "商品一覧", admin_items_path, class: 'nav-link text-dark' %>
    </li>
    <li class="nav-item">
      <%= link_to "会員一覧", admin_customers_path, class: 'nav-link text-dark' %>
    </li>
    <li class="nav-item">
      <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' %>
    </li>

    <% else %>
    <li class="nav-item">
      <%= link_to "About", homes_about_path, class: 'nav-link text-dark'  %>
    </li>
    <li class="nav-item">
      <%= link_to "商品一覧", items_path, class: 'nav-link text-dark'  %>
    </li>
    <li class="nav-item">
      <%= link_to "新規登録", new_customer_registration_path, class: 'nav-link text-dark'  %>
    </li>
    <li class="nav-item">
      <%= link_to "ログイン", customer_session_path, class: 'nav-link text-dark'  %>
    </li>
    <% end %>

        </ul>
        </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>

<h2>注文情報入力</h2>
<%= form_with model:@order,url: orders_confirm_path, local:true do |f|%>
<h4>支払方法</h4>
<%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

<%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>

<h4>お届け先</h4>

<div class="form-group">
<%= f.radio_button :address_option, 0 %>
<%= f.label :address_option, "ご自身の住所" %><br>
〒<%= current_customer.postal_code %>　<%= current_customer.address %><br>
<%= current_customer.last_name %><%= current_customer.first_name %>
</div>

  <div class="form-group">
   <%= f.radio_button :address_option, 1 %>
   <%= f.label :address_option, "登録済み住所から選択" %><br>
   <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :full_address) %>
  </div>

  <div class="form-group">
   <%= f.radio_button :address_option, 2 %>
   <%= f.label :address_option, "新しいお届け先" %><br>
   <div class="form-group row">
    <div class="col-3">
    <%= f.label :postal_code, "郵便番号" %>
    </div>
    <div class="col-7">
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "address", class:"form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-3">
    <%= f.label :address, "住所" %>
    </div>
    <div class="col-7">
    <%= f.text_field :address, autofocus: true, autocomplete: "address", class:"form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-3">
    <%= f.label :name, "宛名" %>
    </div>
    <div class="col-7">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control" %>
    </div>
  <%= f.submit "確認画面へ進む", class:"btn btn-success" %>
  <% end %>
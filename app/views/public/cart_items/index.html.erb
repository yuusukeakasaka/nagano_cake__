<h2>ショッピングカート</h2>

  <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
   </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td><%= form_with model: @cart_item, url: cart_item_path, local: true do |f| %>
            <%= f.hidden_field :item_id, :amount => @item.id %>
            <%= f.select :amount, *[1..9] %>
            <%= f.submit "変更"%>
            <% end %>
        </td>
        <td><%= cart_item.subtotal %></td>
        <% @合計金額 +=  cart_item.subtotal %>
    </tr>
    <% end %>
  </tbody>

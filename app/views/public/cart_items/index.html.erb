<h2>ショッピングカート</h2>

  <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
   </thead>
  <tbody>
    <% @sum = 0 %>
    <% @cart_items.each do |cart_item| %>
    <tr>
        <td><%= attachment_image_tag cart_item.item, :image, size: "50x50", format: 'jpeg' %></td>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td><%= form_with model: @cart_items, url: cart_item_path(cart_item), local:true, method: :patch do |f| %>
            <%= f.hidden_field :item_id, :amount => cart_item.id %>
            <%= f.select :amount, *[1..9] %>
            <%= f.submit "変更"%>
            <% end %>
        </td>
        <td><%= cart_item.subtotal %></td>
        <% @sum +=  cart_item.subtotal %>
        <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
